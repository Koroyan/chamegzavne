<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1.5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_margin="5sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/post_list_user_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grigorys"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="3sp"
        />
    <ImageView
        android:id="@+id/post_list_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/post_list_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"

        android:layout_marginStart="3sp"
        android:layout_marginTop="8dp"
        android:text="title"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/post_list_user_name_id" />

    <TextView
        android:id="@+id/post_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2pt"
        tools:text="Georgia:Akhalkalakis raioni:diliska"
        android:textSize="15sp"
        android:textColor="#CEC3C3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image"/>


    <TextView
        android:id="@+id/post_list_comment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="6sp"
        android:text="mdffsdgfdfgd"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_address" />



    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="1.5dp"
        android:layout_marginEnd="15dp"
        android:background="#34A09797"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_accept_btn"
        />
    <ImageView
        android:id="@+id/post_accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_message_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_list_comment_id"
        android:layout_margin="4.8sp"/>









</androidx.constraintlayout.widget.ConstraintLayout>